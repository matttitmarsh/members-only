<!DOCTYPE html>
<html>
  <head>
    <title>Members Only</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if notice %>
      <div class="notice"><%= notice %></div>
    <% end %>
    <% if alert %>
      <div class="alert"><%= alert %></div>
    <% end %>

    <nav class="nav-bar">
      <%= link_to "Members Only", root_path, class: "nav-button" %>
      <% if user_signed_in? %>
        <%= link_to "New Post", new_post_path, class: "nav-button nav-right" %>
        <%= link_to "Log Out", sign_out_path, class: "nav-button" %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "nav-button nav-right" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "nav-button" %>
      <% end %>
    </nav>

    <%= yield %>
  </body>
</html>